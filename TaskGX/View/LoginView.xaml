<Window x:Class="TaskGX.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskGX.View"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle = "None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- Define as bordas da imagem de fundo e a imagem de fundo -->
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Imagens/FundoTelaLogin.png"/>
        </Border.Background>
        <Border CornerRadius="10"
            BorderThickness="5"
            Opacity="0.8">
            
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0.0"/>
                    <GradientStop Color="DarkGray" Offset="0.75"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="black" Offset="0.0"/>
                    <GradientStop Color="DarkGray" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Login"
                           Foreground="White"
                           FontSize="10"
                           FontFamily="MontSerrat"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>

                <Button x:Name="BotaoMinimizar"
                        BorderThickness="0"
                        Content="−"
                        FontSize="16"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="BotaoMinimizar_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#696969"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#797979"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                    CornerRadius="1"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="BotaoFechar"
                        BorderThickness="0"
                        Content="X"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="BotaoFechar_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF4433"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6655"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>

                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                    CornerRadius="1"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Width="250"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="50,35,0,0">
                    <Image Source="/Imagens/Icone.png" Width="100" Height="100"/>
                    
                    <TextBlock Text="TaskGX"
                               Foreground="Black"
                               FontSize="25"
                               FontWeight="bold"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Bem-vindo ao Task GX."
                               Foreground="black"
                               FontSize="15"
                               FontWeight="bold"
                               FontFamily="Montserrat"
                               TextAlignment="center"
                               TextWrapping="Wrap"
                               Margin="0,5,0,0"/>
                    
                    <TextBlock Text="Username:"
                               Foreground="black"
                               FontSize="14"
                               FontWeight="bold"
                               FontFamily="Montserrat"
                               Margin="0,35,0,0"/>

                    <TextBox x:Name="TextBoxUsername"
                             FontSize="13"
                             Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                             FontWeight="Normal"
                             FontFamily="Montserrat"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin=" 0,5,0,0"
                             Padding="20,0,0,0">
                        
                        <TextBox.Background>
                            <ImageBrush ImageSource = "/Imagens/UserIcone.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Senha:"
                               Foreground="black"
                               FontSize="14"
                               FontWeight="bold"
                               FontFamily="Montserrat"
                               Margin="0,15,0,0"/>

                    <PasswordBox x:Name="TextBoxSenha"
                             FontSize="13"
                             FontWeight="Normal"
                             FontFamily="Montserrat"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             PasswordChanged="TextBoxSenha_PasswordChanged"
                             VerticalContentAlignment="Center"
                             Margin=" 0,5,0,0"
                             Padding="20,0,0,0">
                        <PasswordBox.Background>
                            
                            <ImageBrush ImageSource = "/Imagens/ChaveIcone.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>

                    <Button x:Name="BotaoLogin"
                            BorderThickness="0"
                            Content="Login"
                           
                            Command="{Binding DataContext.ComandoLogin,
                          RelativeSource={RelativeSource AncestorType=Window}}"
                            FontSize="12"
                            FontWeight="bold"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            
                            Margin="0,50,0,0">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#898989"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#797979"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>

                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                        <TextBlock Text="Esqueceu sua senha?"
                                   Foreground="black"
                                   FontSize="14"
                                   FontWeight="bold"
                                   FontFamily="Montserrat"/>

                        <TextBlock Text="Recuperar conta."
                                   Foreground="#222"
                                   FontSize="14"
                                   FontWeight="bold"
                                   FontFamily="Montserrat"
                                   Margin="8,0,0,0"
                                   Cursor="Hand"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,6,0,0">
                        <TextBlock Text="Criar conta."
                                Foreground="#222"
                                FontSize="14"
                                FontWeight="bold"
                                FontFamily="Montserrat"
                                Margin="8,0,0,0"
                                Cursor="Hand"/>  
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
