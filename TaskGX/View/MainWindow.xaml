<Window x:Class="TaskGX.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskGX"
        Width="1200"
        Height="750"
        Background="#0B1220"
        WindowStartupLocation="CenterScreen">

    <!-- ===== ESTILOS ===== -->
    <Window.Resources>

        <!-- Botão menu -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#1F2937"/>
                                <Setter Property="Foreground"
                                        Value="#F9FAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

    </Window.Resources>

    <!-- ===== LAYOUT ===== -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0"
                Background="#111827"
                CornerRadius="22"
                Margin="20">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <TextBlock Text="TaskGX"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#F9FAFB"/>

                <!-- Menu -->
                <StackPanel Grid.Row="1" Margin="0,30,0,0">
                    <Button Content="Dashboard" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="My Tasks" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="In Progress" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="Completed" Style="{StaticResource MenuButtonStyle}"/>
                </StackPanel>

                <!-- Logout -->
                <Button Grid.Row="2"
                        Content="Logout"
                        Foreground="#EF4444"
                        Style="{StaticResource MenuButtonStyle}"/>
            </Grid>
        </Border>

        <!-- CONTEÚDO -->
        <Grid Grid.Column="1" Margin="10,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Welcome,{} "
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#F9FAFB"/>

            <!-- Cards -->
            <UniformGrid Grid.Row="1"
                         Columns="4"
                         Margin="0,24,0,24">

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="All Tasks" Foreground="#9CA3AF"/>
                        <TextBlock Text="12"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Foreground="#3B82F6"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="In Progress" Foreground="#9CA3AF"/>
                        <TextBlock Text="5"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Foreground="#FACC15"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Completed" Foreground="#9CA3AF"/>
                        <TextBlock Text="7"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Overdue" Foreground="#9CA3AF"/>
                        <TextBlock Text="2"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Foreground="#EF4444"/>
                    </StackPanel>
                </Border>

            </UniformGrid>

            <!-- Tasks -->
            <StackPanel Grid.Row="2">

                <TextBlock Text="Today's Tasks"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#F9FAFB"
                           Margin="0,0,0,14"/>

                <Border Style="{StaticResource CardStyle}">
                    <TextBlock Text="Design new homepage"
                               Foreground="#F9FAFB"
                               FontWeight="SemiBold"/>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <TextBlock Text="Fix login issues"
                               Foreground="#F9FAFB"
                               FontWeight="SemiBold"/>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <TextBlock Text="Update project report"
                               Foreground="#F9FAFB"
                               FontWeight="SemiBold"/>
                </Border>

            </StackPanel>

        </Grid>
    </Grid>
</Window>
