<Window x:Class="TaskGX.View.CriarContaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskGX.View"
        mc:Ignorable="d"
        Title="LoginView" Height="650" Width="800"
        WindowStyle = "None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- Define as bordas da imagem de fundo e a imagem de fundo -->
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Imagens/FundoTelaLogin.png"/>
        </Border.Background>
        <Border CornerRadius="10"
            BorderThickness="5"
            Opacity="0.8">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0.0"/>
                    <GradientStop Color="DarkGray" Offset="0.75"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="black" Offset="0.0"/>
                    <GradientStop Color="DarkGray" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel Width="250"
            Grid.Row="1"
            Orientation="Vertical"
            Margin="50,10,0,0">

                <Image Source="/Imagens/Icone.png" Width="100" Height="100"/>

                <TextBlock Text="TaskGX"
               Foreground="Black"
               FontSize="25"
               FontWeight="Bold"
               FontFamily="Montserrat"
               HorizontalAlignment="Center"/>

                <TextBlock Text="Crie sua conta no TaskGX."
               Foreground="Black"
               FontSize="15"
               FontWeight="Bold"
               FontFamily="Montserrat"
               TextAlignment="Center"
               Margin="0,5,0,0"/>

                <!-- NOME -->
                <TextBlock Text="Nome:"
               Foreground="Black"
               FontSize="14"
               FontWeight="Bold"
               FontFamily="Montserrat"
               Margin="0,20,0,0"/>

                <TextBox x:Name="TextBoxNome"
             FontSize="13"
             FontFamily="Montserrat"
             Foreground="White"
             CaretBrush="LightGray"
             BorderBrush="DarkGray"
             BorderThickness="0,0,0,1"
             Height="28"
             Padding="20,0,0,0"
             Margin="0,5,0,0">

                    <TextBox.Background>
                        <ImageBrush ImageSource="/Imagens/UserIcone.png"
                        Stretch="None"
                        AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>

                <!-- EMAIL -->
                <TextBlock Text="Email:"
               Foreground="Black"
               FontSize="14"
               FontWeight="Bold"
               FontFamily="Montserrat"
               Margin="0,15,0,0"/>

                <TextBox x:Name="TextBoxEmail"
             FontSize="13"
             FontFamily="Montserrat"
             Foreground="White"
             CaretBrush="LightGray"
             BorderBrush="DarkGray"
             BorderThickness="0,0,0,1"
             Height="28"
             Padding="20,0,0,0"
             Margin="0,5,0,0">

                    <TextBox.Background>
                        <ImageBrush ImageSource="/Imagens/EmailIcone.png"
                        Stretch="None"
                        AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>

                <!-- SENHA -->
                <TextBlock Text="Senha:"
               Foreground="Black"
               FontSize="14"
               FontWeight="Bold"
               FontFamily="Montserrat"
               Margin="0,15,0,0"/>

                <PasswordBox x:Name="PasswordBoxSenha"
                 FontSize="13"
                 FontFamily="Montserrat"
                 Foreground="White"
                 CaretBrush="LightGray"
                 BorderBrush="DarkGray"
                 BorderThickness="0,0,0,1"
                 Height="28"
                 Padding="20,0,0,0"
                 Margin="0,5,0,0">

                    <PasswordBox.Background>
                        <ImageBrush ImageSource="/Imagens/ChaveIcone.png"
                        Stretch="None"
                        AlignmentX="Left"/>
                    </PasswordBox.Background>
                </PasswordBox>

                <!-- CONFIRMAR SENHA -->
                <TextBlock Text="Confirmar Senha:"
               Foreground="Black"
               FontSize="14"
               FontWeight="Bold"
               FontFamily="Montserrat"
               Margin="0,15,0,0"/>

                <PasswordBox x:Name="PasswordBoxConfirmarSenha"
                 FontSize="13"
                 FontFamily="Montserrat"
                 Foreground="White"
                 CaretBrush="LightGray"
                 BorderBrush="DarkGray"
                 BorderThickness="0,0,0,1"
                 Height="28"
                 Padding="20,0,0,0"
                 Margin="0,5,0,0">

                    <PasswordBox.Background>
                        <ImageBrush ImageSource="/Imagens/ChaveIcone.png"
                        Stretch="None"
                        AlignmentX="Left"/>
                    </PasswordBox.Background>
                </PasswordBox>

                <!-- BOTÃO -->
                <Button x:Name="BotaoCriarConta"
            Content="Criar Conta"
            FontSize="12"
            FontWeight="Bold"
            FontFamily="Montserrat"
            Cursor="Hand"
            BorderThickness="0"
            Margin="0,30,0,0">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#898989"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#797979"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150"
                        Height="40"
                        CornerRadius="20"
                        Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- VOLTAR LOGIN -->
                <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,20,0,0">

                    <TextBlock Text="Já tem uma conta?"
                   Foreground="Black"
                   FontSize="14"
                   FontWeight="Bold"
                   FontFamily="Montserrat"/>

                    <TextBlock Text="Voltar para Login."
                   Foreground="#222"
                   FontSize="14"
                   FontWeight="Bold"
                   FontFamily="Montserrat"
                   Margin="8,0,0,0"
                   Cursor="Hand"/>
                    
                </StackPanel>
                <!-- LOGIN COM GOOGLE -->
                <Button x:Name="BotaoLoginGoogle"
                                Cursor="Hand"
                                BorderThickness="0"
                                Margin="0,15,0,0">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="GoogleBorder"
                                    Width="200"
                                    Height="40"
                                    CornerRadius="20"
                                    Background="#FFFFFF"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1">

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"> 

                                    <Image Source="/Imagens/GoogleIcone.png"
                                           Width="18"
                                           Height="18"
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Center"/>

                                    <TextBlock Text="Entrar com Google"
                                               Foreground="#444"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               FontFamily="Montserrat"
                                               VerticalAlignment="Center"/>    
                                </StackPanel>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="GoogleBorder"
                                            Property="Background"
                                            Value="#F2F2F2"/>   
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

        </Border>
    </Border>
</Window>
